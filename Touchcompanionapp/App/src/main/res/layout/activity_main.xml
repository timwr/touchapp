<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.headsup.remote.MainActivity"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:background="@drawable/bg_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:id="@+id/scrollview_menu"
        android:scrollbars="none"
        android:layout_gravity="start"
        android:layout_width="240dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_menu"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#111">

            <TextView
                android:text="Take a picture"
                android:onClick="launchCamera"
                android:drawableLeft="@android:drawable/ic_menu_camera"
                style="@style/MenuTextItem" />

            <TextView
                android:id="@+id/textview_bluetooth"
                android:onClick="launchBluetooth"
                android:text="Bluetooth Settings"
                android:drawableLeft="@android:drawable/ic_menu_preferences"
                style="@style/MenuTextItem" />

            <TextView
                android:text="Keyboard"
                android:onClick="launchKeyboard"
                android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                style="@style/MenuTextItem" />

            <TextView
                android:text="Google search"
                android:onClick="closeMenu"
                android:textColor="@android:color/darker_gray"
                android:drawableLeft="@android:drawable/ic_menu_search"
                style="@style/MenuTextItem" />

            <TextView
                android:text="Take a video"
                android:textColor="@android:color/darker_gray"
                android:onClick="closeMenu"
                android:drawableLeft="@android:drawable/ic_menu_crop"
                style="@style/MenuTextItem" />

            <TextView
                android:text="Get directions"
                android:textColor="@android:color/darker_gray"
                android:onClick="closeMenu"
                android:drawableLeft="@android:drawable/ic_menu_directions"
                style="@style/MenuTextItem" />

            <TextView
                android:text="Send a message"
                android:textColor="@android:color/darker_gray"
                android:onClick="closeMenu"
                android:drawableLeft="@android:drawable/ic_menu_send"
                style="@style/MenuTextItem" />

            <TextView
                android:text="Make a call"
                android:textColor="@android:color/darker_gray"
                android:onClick="closeMenu"
                android:drawableLeft="@android:drawable/ic_menu_call"
                style="@style/MenuTextItem" />

            <TextView
                android:text="Make a video call"
                android:textColor="@android:color/darker_gray"
                android:onClick="closeMenu"
                android:drawableLeft="@android:drawable/ic_menu_view"
                style="@style/MenuTextItem" />

            <TextView
                android:text="Play a game"
                android:textColor="@android:color/darker_gray"
                android:onClick="closeMenu"
                android:drawableLeft="@android:drawable/ic_menu_more"
                style="@style/MenuTextItem" />

            <TextView
                android:onClick="closeMenu"
                android:textColor="@android:color/darker_gray"
                android:text="Play music"
                android:drawableLeft="@android:drawable/ic_menu_upload_you_tube"
                style="@style/MenuTextItem" />

            <TextView
                android:text="Start a run"
                android:textColor="@android:color/darker_gray"
                android:onClick="closeMenu"
                android:drawableLeft="@android:drawable/ic_menu_mapmode"
                style="@style/MenuTextItem" />

            <!--"google..."-->
            <!--"take a picture"-->
            <!--"record a video"-->
            <!--"get directions to..."-->
            <!--"send a message to..."-->
            <!--"make a call to..."-->
            <!--"make a video call to..."-->
            <!--·         Play a Game-->
            <!--·         Play Music-->
            <!--·         Remind Me To…-->
            <!--·         Start a Bike Ride-->
            <!--·         Start a Round of Golf-->
            <!--·         Start a Run-->
            <!--·         Translate This-->
            <!--·         Tune an Instrument-->


            <TextView
                android:text="Quit"
                android:onClick="quitApp"
                android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                style="@style/MenuTextItem" />
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>
