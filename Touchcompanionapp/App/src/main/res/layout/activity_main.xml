


<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.headsup.app.MainActivity"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layout_menu"
        android:orientation="vertical"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111">

        <TextView
            android:id="@+id/textview_bluetooth"
            android:clickable="true"
            android:onClick="launchBluetooth"
            android:text="Bluetooth Settings"
            android:drawableLeft="@android:drawable/ic_menu_preferences"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:drawablePadding="@dimen/space_default"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#fff"/>

        <TextView
            android:text="Launch Camera"
            android:clickable="true"
            android:onClick="launchCamera"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:drawablePadding="@dimen/space_default"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#fff"/>


        <TextView
            android:text="Quit"
            android:clickable="true"
            android:onClick="quitApp"
            android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:drawablePadding="@dimen/space_default"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#fff"/>    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
